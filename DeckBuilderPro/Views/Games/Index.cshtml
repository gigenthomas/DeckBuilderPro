@model DeckBuilderPro.ViewModels.Interfaces.IListViewModel<DeckBuilderPro.ViewModels.GameViewModel>
@{
    ViewBag.Title = "Games";
}
<h2>
    Index</h2>
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
@if (Model.Pager.NumberOfPages > 1)
{ 
    @Html.Partial("_PageList", @Model.Pager)
}
<table class="table">
    <tr>
        <th class="span5">
            @Html.DisplayNameFor(model => model.model.Name)
        </th>
        <th class="span5">
            @Html.DisplayNameFor(model => model.model.ManufacturerId)
        </th>
        <th class="span2">
        </th>
    </tr>
    @foreach (var item in Model.ItemList)
    {
        <tr>
            <td class="span5">
                @Html.ActionLink(item.Name, "Details", new { id = item.Id })
            </td>
            <td class="span5">
                @Html.DisplayFor(modelItem => item.Manufacturer.Name)
            </td>
            <td class="span2">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }
</table>
